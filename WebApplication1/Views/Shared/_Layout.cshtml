@{
    var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
    var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebApplication1</title>
    <link rel="icon" href="~/SCHNEIDER-SM.png" type="image/png" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebApplication1.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
</head>
<body>
    <div class="d-flex">
        <nav class="min-vh-100 d-flex flex-column align-items-center bg-dark p-3 flex-shrink-0" style="width: 80px;">
            <a href="#" class="mb-4">
                <img src="~/SCHNEIDER-SM.png" alt="Sidebar Logo" class="img-fluid">
            </a>

            <ul class="nav nav-pills flex-column mb-auto text-center w-100">
                <li class="nav-item mb-3">
                    <a asp-controller="Home" asp-action="Index"
                       class="nav-link text-white px-2 py-3 @(currentController == "Home" ? "active bg-primary" : "")" title="Dashboard">
                        <i class="fas fa-chart-line fa-lg"></i>
                    </a>
                </li>
                <li class="nav-item mb-3">
                    <a asp-controller="ChartJs" asp-action="Index"
                       class="nav-link text-white px-2 py-3 @(currentController == "ChartJs" ? "active bg-primary" : "")" title="Chart Js">
                        <i class="fas fa-chart-line fa-lg"></i>
                    </a>
                </li>
                <li class="nav-item mb-3">
                    <a asp-controller="Employee" asp-action="Index"
                       class="nav-link text-white px-2 py-3 @(currentController == "Employee" ? "active bg-primary" : "")" title="Employee Data">
                        <i class="fas fa-user-tie fa-lg"></i>
                    </a>
                </li>
                <li class="nav-item mb-3">
                    <a asp-controller="Genders" asp-action="Index"
                       class="nav-link px-2 py-3 text-white @(currentController == "Genders" ? "active bg-primary" : "")" title="Gender List">
                        <i class="fas fa-venus-mars fa-lg"></i>
                    </a>
                </li>
                <li class="nav-item mb-3">
                    <a asp-controller="Department" asp-action="Index"
                       class="nav-link text-white px-2 py-3 @(currentController == "Department" ? "active bg-primary" : "")" title="Department Data">
                        <i class="fas fa-building fa-lg"></i>
                    </a>
                </li>
            </ul>
        </nav>

        <div class="flex-grow-1 d-flex flex-column">
            <header class="" style="position: sticky; top: 0; z-index: 1000;">
                <nav class="navbar navbar-expand-sm navbar-dark bg-se-green border-bottom box-shadow mb-3">
                    <div class="container-fluid d-flex justify-content-between align-items-center">
                        <div class="d-flex align-items-center">
                            <span class="navbar-toggler d-block">
                                <span class="navbar-toggler-icon"></span>
                            </span>
                            <h2 class="fw-bold text-light ms-3 mb-0" asp-area="" asp-controller="Home" asp-action="Index">P1F Apps</h2>
                        </div>
                        <a href="#">
                            <img id="navbar-logo" src="~/Schneider_Electric_Logo.png" alt="Logo" style="height: 40px;">
                        </a>
                    </div>
                </nav>
            </header>
            <div class="container">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>
        </div>
    </div>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
